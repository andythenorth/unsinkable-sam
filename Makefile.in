# Here also go all build targets specific to this very newgrf

GENERATE_NML := unsinkable-sam-nml
GENERATE_LNG := unsinkable-sam-nml
GENERATE_DOC := unsinkable-sam-nml

GENERATE=src/build_unsinkable_sam.py

 # default num. pool workers for python compile, default is 1 to avoid accidental DoS of people's system
pw = 1
roster = *

unsinkable-sam-nml:
	$(_E) [GENERATE]
	$(_V) python3 src/build_unsinkable_sam.py '${REPO_TITLE}' '${REPO_REVISION}' '${pw}' '${roster}'

clean::
	$(_V)-rm unsinkable-sam.nml
	$(_V)-rm -r docs
	$(_V)-rm -r chameleon_cache
	$(_V)-rm -r generated
	$(_V)-rm src/*.pyc
	$(_V)-rm src/*/*.pyc
